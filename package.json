{
  "name": "resume",
  "version": "0.0.1",
  "private": true,
  "homepage": "https://tobias-belch.github.io/resume",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "broadcast:preview": "npx localtunnel --port 3001",
    "lint": "eslint --ext .js,.ts,.astro src",
    "lint:watch": "esw -w --ext .js,.ts,.astro src",
    "format": "prettier --write .",
    "format:watch": "onchange \"**/*\" -- prettier --write --ignore-unknown {{changed}}",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{js,ts,astro}": [
      "npm run format",
      "npm run lint"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "astro": "^1.0.0-beta.70",
    "eslint": "^8.19.0",
    "eslint-plugin-astro": "^0.15.0",
    "eslint-watch": "^8.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "onchange": "^7.1.0",
    "prettier": "^2.7.1",
    "prettier-plugin-astro": "^0.1.1"
  },
  "dependencies": {
    "zod": "^3.17.3"
  }
}
