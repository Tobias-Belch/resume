---
import Highlighted from "@components/shared/Highlighted.astro";

export type Props = { title?: string };

const { title } = Astro.props as Props;
---

<section>
  {title && (
    <Highlighted variant="dark">
      <h3>{title}</h3>
    </Highlighted>
  )}
  <slot></slot>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: var(--spacing-xl);
  }
</style>
